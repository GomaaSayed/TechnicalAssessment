<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UI.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">UI</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" id="addInvoiceLink" href="/AddInvoice" style="display: none;">Add Invoice</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" id="invoicesLink" href="/Invoices" style="display: none;">Invoices List</a>
                        </li>
                        <!-- Show Login Link if Token is Not Valid -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" id="loginLink" href="/Login" style="display: block;">Login</a>
                        </li>
                        <!-- Show Log Out Button if Token is Valid -->
                        <li class="nav-item" id="logoutBtn" style="display: none;">
                            <button class="btn btn-danger" onclick="logout()">Log Out</button>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - UI - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Function to decode JWT token and check expiration
        function isTokenValid(token) {
            if (!token) return false;

            const payload = JSON.parse(atob(token.split('.')[1])); // Decode JWT and get the payload
            const expirationTime = payload.exp * 1000; // Convert expiration time to milliseconds
            return Date.now() < expirationTime; // Compare current time with expiration time
        }

        // Function to handle visibility of AddInvoice, Invoices, and Login/Logout buttons
        function checkTokenAndToggleVisibility() {
            const token = localStorage.getItem('authToken'); // Get the token from localStorage
            const currentPage = window.location.pathname; // Get the current page path

            // If the user is not on the Login page and the token is invalid, redirect to Login page
            if (currentPage !== '/Login' && (!token || !isTokenValid(token))) {
                window.location.href = '/Login'; // Redirect to the Login page
                return; // Exit the function to prevent further code execution
            }

            // If the token exists and is valid, show Add Invoice, Invoices, and Log Out sections
            if (token && isTokenValid(token)) {
                document.getElementById('addInvoiceLink').style.display = 'block';
                document.getElementById('invoicesLink').style.display = 'block';
                document.getElementById('logoutBtn').style.display = 'block';
                document.getElementById('loginLink').style.display = 'none';
            } else {
                // If token doesn't exist or is expired, hide Add Invoice, Invoices, and Log Out sections
                document.getElementById('addInvoiceLink').style.display = 'none';
                document.getElementById('invoicesLink').style.display = 'none';
                document.getElementById('logoutBtn').style.display = 'none';
                document.getElementById('loginLink').style.display = 'block';
            }
        }

        // Function to handle logging out
        function logout() {
            localStorage.removeItem('authToken'); // Clear the token from localStorage
            checkTokenAndToggleVisibility(); // Update visibility after logging out
            window.location.href = '/Login'; // Redirect to Login page
        }

        // Run on page load
        window.onload = function () {
            checkTokenAndToggleVisibility(); // Check token and adjust visibility on page load
        };
    </script>



    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>